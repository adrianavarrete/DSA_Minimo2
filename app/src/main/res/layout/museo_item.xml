<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenMuseo"
        android:layout_width="394dp"
        android:layout_height="50dp"
        android:layout_marginTop="42dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreMuseo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nombreMuseo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#f9ebd2"
        android:gravity="center"

        android:text="TextView background color (@color/Wheat) [color from xml resource file]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenMuseo" />

</android.support.constraint.ConstraintLayout>